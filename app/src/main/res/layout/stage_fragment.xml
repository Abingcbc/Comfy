<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/fake_cardview">

        <TextView
                android:id="@+id/stage_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:text="task · number"/>

        <ImageButton
                android:id="@+id/edit_stage"
                android:src="@drawable/dots_horizontal"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stage_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:layout_below="@id/stage_name">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
                android:id="@+id/team_plus_card"
                android:textSize="24dp"
                android:text="添加新的任务"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>