<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.main.MainActivity"
        tools:showIn="@layout/app_bar_main">

    <FrameLayout
            android:id="@+id/frag_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabLayout">
    </FrameLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_plus_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="78dp"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"/>



    <com.flyco.tablayout.CommonTabLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            app:tl_textsize="20dp"
            app:tl_indicator_color="#2C97DE"
            app:tl_textSelectColor="#2C97DE"
            app:tl_textUnselectColor="#66000000"
            app:tl_underline_color="#DDDDDD"
            app:tl_underline_height="1dp"
            app:tl_indicator_height="5dp">

    </com.flyco.tablayout.CommonTabLayout>



</RelativeLayout>